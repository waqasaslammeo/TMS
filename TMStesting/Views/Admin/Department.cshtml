
@using TMS.Models
@model TMS.Models.Department
@{
    ViewBag.Title = "Department";
    Layout = "~/Views/Shared/AdminPanal.cshtml";
}

@{
    var dd = ViewBag.Department as Department;
    var dptId = -1;
    var dptName = "";
    if (dd == null)
    {
        dptId = -1;
        dptName = ""; 
    }
    else
    {
        dptId = dd.Id;
        dptName = dd.DepartmentName;
    }

    
    
}


@using (Html.BeginForm("Department"))
{

<div class="row">
   
        <div class="box col-md-6">
            <div class="box-inner">
                <div class="box-header well" data-original-title="">
                    <h2><i class="glyphicon glyphicon-edit"></i> Add New Departments</h2>
                    <div class="box-icon">
                        <a href="#" class="btn btn-setting btn-round btn-default">
                            <i class="glyphicon glyphicon-cog"></i>
                        </a>
                        <a href="#" class="btn btn-minimize btn-round btn-default">
                            <i class="glyphicon glyphicon-chevron-up"></i>
                        </a>
                        <a href="#" class="btn btn-close btn-round btn-default">
                            <i class="glyphicon glyphicon-remove"></i>
                        </a>
                    </div>
                </div>
                <div class="box-content">
                    <form role="form">
                        <div class="form-group">
                            <label for="DepartmentID"></label>
                            <input type="hidden" class="form-control" id="DepartmentID" name="Id" placeholder="Department ID" value="@Html.Raw(dptId)">
                        </div>
                        <div class="form-group">
                            <label for="DepartmentName"></label>
                            <input type="text" class="form-control" id="DepartmentName" name="DepartmentName" placeholder="Department Name" value="@Html.Raw(dptName)">
                        </div>


                        <br />
                        <button type="submit" class="btn btn-default" style="margin: 0px 0px 0px 220px;">SAVE</button>
                    </form>
                </div>
            </div>
        </div>
    
    <div class="box col-md-6">
    <div class="box-inner">
    <div class="box-header well" data-original-title="">
        <h2><i class="glyphicon glyphicon-user"></i> Department Details</h2>

        <div class="box-icon">
            <a href="#" class="btn btn-setting btn-round btn-default"><i class="glyphicon glyphicon-cog"></i></a>
            <a href="#" class="btn btn-minimize btn-round btn-default"><i
                    class="glyphicon glyphicon-chevron-up"></i></a>
            <a href="#" class="btn btn-close btn-round btn-default"><i class="glyphicon glyphicon-remove"></i></a>
        </div>
    </div>
    <div class="box-content">
    
    <table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
    <thead>
    <tr>
        
        <th width="54%">Department Name</th>
        <th></th>
        
    </tr>
    </thead>
        <tbody>

            @foreach (Department d in ViewBag.DepartmentList)
            {
                  <tr>
                      <td class="center" style="color: black !important;">
                          @Html.Raw(d.DepartmentName)
                      </td>
                    <td class="center">
           
                        <a style=" height: 26px; padding: 3px 19px 0px 20px;" class="btn btn-info" href='@Url.Action("Department", "Admin",new{id=d.Id})'>
                            <i class="glyphicon glyphicon-edit icon-white"></i>
                            Edit
                        </a>
                        <a style=" height: 26px; padding: 3px 20px 0px 20px;" class="btn btn-danger" href="@Url.Action("DepartmentDelete", "Admin", new { id = d.Id })">
                            <i class="glyphicon glyphicon-trash icon-white"></i>
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
    </div>
    </div>
    <!--/span-->

    </div><!--/row-->
        <!--/span-->

    }